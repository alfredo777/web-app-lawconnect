<div class="row">
  <div class="col-lg-2">
  </div>
  <div class="col-lg-9">
    <div class="card" style="margin-left: 150px; margin-top: 100px;">
      <div class="card-header">
        Administradores
        <a href="/admin/register">Nuevo Admnistrador</a>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table table-bordered" id="default-datatable">
            <thead>
              <tr>
                <th>email</th>
                <th>token</th>
                <th>Eliminar</th>
              </tr>
            </thead>
            <tbody>
              <% @admins.each do |admin| %>
              <tr>
                <td><%= admin['user']%></td>
                <td><%= admin['password']%></td>
                <td><a href="/admin/secure/delete?id=<%=admin['id']%>">Eliminar</a></td>
              </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#default-datatable').DataTable();
  });
  
</script>
