<div class="clearfix"></div>
<div class="content-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-header">
						Ultimas citas
						<div class="card-action">
						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table class="table" id="default-datatable" >
								<thead>
									<tr>
										<th>Fecha  <b style="color:blue;">(Click para Ordenar)</b></th>
										<th>Token</th>
										<th>Asunto </th>
										<th>Llamada</th>
									</tr>
								</thead>
								<tbody>
									<% @citas.each do |cita| %>
									<tr>
										<td>
											<% d = DateTime.parse(cita['fecha'])%>
											<%= d.strftime("%m/%d/%Y a las  %I:%M%p") %>
											
										</td>
										<td><a href='/admin/citas/<%=cita['id']%>'><%= cita['token'] %></a></td>
										<td><%= cita['asunto'] %></td>
										
										<td><%= cita['programar_llamada'] %></td>
									</tr>
									<%end%>
									
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
			</div><!--End Row-->
		</div>
	</div>
	<script type="text/javascript">
		$(document).ready(function(){
			$('#default-datatable').DataTable();
		});
		
	</script>