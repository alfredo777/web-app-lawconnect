<div class="clearfix"></div>
<div class="content-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-header">
						Casos
						<div class="card-action">
						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table class="table" id="default-datatable" >
								<thead>
									<tr>
										<th>Número de expediente</th>
										<th>Título </th>
										<th>Abogado</th>
									</tr>
								</thead>
								<tbody>
									<% @casos.each do |caso| %>
									<tr>
										<td><a href="/admin/caso?token=<%= caso['numero_expediente'] %>"><%= caso['numero_expediente'] %></a></td>
										<td><%= caso['titulo'] %></td>
										<td>
											<% caso['abogados'].each do |abogado| %>
												<%= abogado['nombre'] %> <%= abogado['apellidos'] %>
											<% end%>
											
										</td>
									</tr>
									<%end%>
									
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
			</div><!--End Row-->
		</div>
	</div>

<script type="text/javascript">
	$(document).ready(function(){
		$('#default-datatable').DataTable();
	});
	
</script>
