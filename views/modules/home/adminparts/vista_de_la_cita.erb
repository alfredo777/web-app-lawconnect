<div class="clearfix"></div>
<div class="content-wrapper">
  <div class="container-fluid">
    <!-- End Breadcrumb-->
    <div class="card">
      <div class="card-body">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h3>
          Cita
          <small>#<%= @cita['token']%></small>
          </h3>
        </section>
        <!-- Main content -->
        <section class="invoice">
          <!-- title row -->
          <div class="row mt-3">
            <div class="col-lg-6">
              <h4><i class="fa fa-globe"></i> Law Connect</h4>
            </div>
            <div class="col-lg-6">
              <h5 class="float-sm-right">Fecha: <%= @cita['fecha']%></h5>
            </div>
          </div>
          
          <hr>
          <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
              <h5>Datos del cliente</h5>
              <address>
                <strong><%= @cita['cliente']['nombre']%> <%= @cita['cliente']['apellidos']%></strong><br>
                  Tel: <%= @cita['cliente']['telefono']%><br>
                  Ext: <%= @cita['cliente']['ext']%><br>
                  Cel: <%= @cita['cliente']['celular']%><br>
                  Email: <%= @cita['cliente']['email']%><br>
                  Direcci√≥n: <%= @cita['cliente']['direccion']%>
              </address>
              </div><!-- /.col -->
              <div class="col-sm-4 invoice-col">
                <h5>Datos del Abogado</h5>
                <address>
                  <strong><%= @cita['abogado']['nombre']%> <%= @cita['abogado']['apellidos']%></strong><br>
                  Tel: <%= @cita['abogado']['telefono']%><br>
                  Ext: <%= @cita['abogado']['ext']%><br>
                  Cel: <%= @cita['abogado']['celular']%><br>
                  Email: <%= @cita['abogado']['email']%>
                </address>
                </div><!-- /.col -->
                <div class="col-sm-4 invoice-col">
                  <b>Asunto</b><br>
                  <br>
                  <%= @cita['asunto'] %><br/>

                  <b>Llamada:</b><%= @cita['llamada'] %>
                  </div><!-- /.col -->
                  </div><!-- /.row -->
                  <!-- Table row -->
                  
                  <hr>
                  <div class="row no-print">
                    <div class="col-lg-3">
                      
                    </div>
                    <div class="col-lg-9">
                      <div class="float-sm-right">
                       <a href="javascript:window.print();" target="_blank" class="btn btn-primary m-1"><i class="fa fa-print"></i> Print</a>
                      </div>
                    </div>
                  </div>
                  </section><!-- /.content -->
                </div>
              </div>
            </div>
            <!-- End container-fluid-->
            
          </div>